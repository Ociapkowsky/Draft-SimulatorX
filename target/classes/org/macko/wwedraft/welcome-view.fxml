<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="30.0" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.macko.wwedraft.WelcomeViewController">
   <children>
      <Label fx:id="titleLabel" text="%welcome.title">
         <font>
            <Font name="System Bold" size="41.0" />
         </font>
      </Label>

      <Button fx:id="nextButton" mnemonicParsing="false" onAction="#handleNextAction" text="%welcome.button.next" />

      <Button fx:id="creatorButton" mnemonicParsing="false" onAction="#handleCreatorAction" text="%welcome.button.creator" />
   </children>
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
</VBox>